<form action="/contest/vacation-photo/{year}/{month}" class="form-horizontal" enctype="multipart/form-data" role="form" method="post">
    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" id="fieldName" name="name" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="fieldEmail">Email</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="fieldEmail" name="email" required>
        </div>
    </div>
    <div class="form-group">
        <label for="fieldPhoto" class="col-sm-2 control-label">Vacation Photo</label>
        <div class="col-sm-4">
            <input type="file" id="fieldPhoto" name="photo" accept="image/*" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>
